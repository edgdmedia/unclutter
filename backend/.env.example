# Server Configuration
PORT=5000
NODE_ENV=development
API_PREFIX=/api/v1
CORS_ORIGIN=*

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=unclutter
DB_USER=root
DB_PASSWORD=
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d
SALT_ROUNDS=10

# Email Configuration
EMAIL_USE_OAUTH=true
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@your-domain.com
EMAIL_PASS=your_email_password
EMAIL_FROM=Unclutter Therapy <your-email@your-domain.com>

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_ACCESS_TOKEN=
GOOGLE_TOKEN_EXPIRY=
GOOGLE_REDIRECT_URL=https://developers.google.com/oauthplayground

# Notification Configuration
NOTIFICATION_SCHEDULER_ENABLED=true
NOTIFICATION_SCHEDULER_INTERVAL=1
NOTIFICATION_DEFAULT_CHANNELS=in_app,email
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=false

# Calendar Configuration
CALENDAR_WEBHOOKS_ENABLED=false
CALENDAR_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/google/calendar
